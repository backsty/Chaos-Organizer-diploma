{
  "name": "chaos-organizer-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "homepage": "https://backsty.github.io/Chaos-Organizer-diploma/",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "lint": "eslint . --ext js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js --fix",
    "format": "prettier --write \"src/**/*.{js,json,css,scss,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,css,scss,html}\"",
    "preview": "vite preview",
    "deploy": "bun run build && gh-pages -d dist",
    "analyze": "vite build --mode analyze",
    "clean": "rimraf dist node_modules/.vite",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "vite preview --host",
    "build:prod": "cross-env NODE_ENV=production vite build",
    "validate": "bun run lint && bun run format:check",
    "start": "bun run dev"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "autoprefixer": "^10.4.18",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.1.0",
    "gh-pages": "^6.1.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.35",
    "postcss-preset-env": "^9.4.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "sass": "^1.71.0",
    "terser": "^5.28.0",
    "typescript": "^5.8.3",
    "vite": "^5.1.0",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-pwa": "^0.19.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "core-js": "^3.36.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.3.0",
    "dexie": "^4.0.1",
    "dompurify": "^3.0.0",
    "emoji-datasource": "^15.0.0",
    "emoji-mart": "^5.5.0",
    "file-saver": "^2.0.5",
    "highlight.js": "^11.9.0",
    "howler": "^2.2.4",
    "jszip": "^3.10.1",
    "localforage": "^1.10.0",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "marked": "^12.0.0",
    "sanitize-html": "^2.12.0",
    "sortablejs": "^1.15.0",
    "tslib": "^2.8.1",
    "uuid": "^9.0.0",
    "validator": "^13.11.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,html,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
