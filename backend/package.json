{
  "name": "chaos-organizer-backend",
  "version": "1.0.0",
  "description": "Backend for Chaos Organizer",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.js",
    "dev:debug": "bun --watch --inspect-brk src/index.js",
    "build": "bun build src/index.js --outdir dist --target node",
    "start": "bun dist/index.js",
    "lint": "eslint . --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "clean": "rimraf dist node_modules",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "validate": "bun run lint && bun run format"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/multer": "^4.0.0",
    "@koa/router": "^13.0.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.16.0",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.4.1",
    "koa-compress": "^5.1.1",
    "koa-helmet": "^8.0.1",
    "koa-router": "^13.0.1",
    "koa-static": "^5.0.0",
    "marked": "4.3.0",
    "mime-types": "^3.0.1",
    "multer": "^2.0.0",
    "pdf-lib": "^1.17.1",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.1",
    "zod": "^3.25.23",
    "@faker-js/faker": "^9.3.0",
    "http-event-stream": "^0.2.0",
    "koa-combine-routers": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-static": "^4.0.4",
    "@types/koa-compress": "^4.0.6",
    "@types/koa-helmet": "^6.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/marked": "^4.3.2",
    "@types/sanitize-html": "^2.13.0",
    "eslint": "^9.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1"
  }
}